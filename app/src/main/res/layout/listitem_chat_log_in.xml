<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_chat_log_in"
        android:padding="8dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/listitem_chat_log_in_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Here is a message about all this bru. This message can be long long long long message, with lots and lots and lots of text. It is always better to be prepared for long text, then just to assume things will be short and sweet."
            android:gravity="start"
            android:textColor="@color/white"
            android:layout_below="@id/listitem_chat_log_in_command_tv"
            android:paddingLeft="@dimen/chat_log_msg_side_padding"
            android:paddingRight="@dimen/chat_log_msg_side_padding"
            android:minWidth="@dimen/chat_log_item_min_width"
            />

        <TextView
            android:id="@+id/listitem_chat_log_in_command_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ping"
            android:textColor="#ff9191"
            android:textSize="@dimen/chat_log_command_text_size"
            android:layout_alignStart="@id/listitem_chat_log_in_tv"
            />

        <TextView
            android:id="@+id/listitem_chat_log_in_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="22:00"
            android:textColor="#ff9191"
            android:textSize="@dimen/chat_log_command_text_size"
            android:layout_alignEnd="@id/listitem_chat_log_in_tv"
            />

    </RelativeLayout>

</RelativeLayout>