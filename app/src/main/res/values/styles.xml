<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="about_main_btn_go" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/black</item>
    </style>


    <style name="about_activity_tv_headers">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="about_activity_tv_paragraphs">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="about_activity_tv_contributor_name">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="about_activity_tv_contributor_detail">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
